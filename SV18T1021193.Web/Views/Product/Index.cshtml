﻿@model SV18T1021193.Web.Models.ProductSearchInput
@{ ViewBag.Title = "Mặt hàng"; }

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>
    <div class="box-body">
        <form id="searchInput" action="~/product/search" >
            @Html.HiddenFor(m => m.PageSize)
            <div class="row">
                <div class="col-sm-3">

                    @Html.DropDownListFor(m => m.SupplierName, SelectListHelper.SelectSupplier(), new { @class = "form-control select2" })

                </div>
                <div class="col-sm-3">

                    @Html.DropDownListFor(m => m.CategoryName, SelectListHelper.SelectCategories(), new { @class = "form-control select2" })

                </div>
                <div class="col-sm-6 input-group">
                    <input type="text" name="searchValue" class="form-control" placeholder="Nhập tên mặt hàng cần tìm" autofocus value="@Model.SearchValue">
                    <span class="input-group-btn">
                        <button type="submit" name="search" id="search-btn" class="btn btn-flat btn-info">
                            <i class="fa fa-search"></i>
                        </button>
                        <a href="~/product/create" class="btn btn-flat btn-primary" style="margin-left:5px;">
                            <i class="fa fa-plus"></i> Bổ sung
                        </a>
                    </span>
                </div>
            </div>
        </form>
        <div id="searchResult">

        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/Search.js"></script>
    <script>
        $(document).ready(function () {
            doSearch(@Model.Page);
            $("#searchInput").submit(function (e) {
                e.preventDefault();
                doSearch(1);
                return false;
            });
        });
    </script>
}
