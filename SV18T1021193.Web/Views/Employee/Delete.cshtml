@model SV18T1021193.DomainModel.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}


<div class="box box-primary">
    <div class="box-header with-border">
    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/employee/delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static"><img src="~/@Model.Photo" style="width: 200px;" /></p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.LastName @Model.FirstName</p>
                </div>
            </div>           
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Notes</p>
                </div>
            </div>




            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV18T1021193.BusinessLayer.CommonDataService.InUsedEmployee(@Model.EmployeeID))
                    {
                        <p class="text-warning">Không được xóa nhân viên này</p>
                    }
                    else
                    {
                        <button type="submit"
                                class="btn btn-danger">
                            <i class="fa fa-trash"></i> Đồng ý xóa
                        </button>


                    }
                    <a href="~/employee" class="btn btn-default">
                        <i class="fa fa-backward"></i>Quay lại
                    </a>
                </div>

            </div>
        </form>
    </div>

    <div class="box-footer">
    </div>
</div>