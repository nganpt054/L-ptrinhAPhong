@model SV18T1021193.Web.Models.CategoryPaginationResult
@{
    Layout = null;
}

<p style="margin-top:auto">
    Có <strong>@Model.RowCount</strong> loại hàng trong tổng số <strong>@Model.PageCount</strong> trang.
</p>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="bg-primary">
                <th>Tên loại hàng</th>
                <th>Mô tả</th>
                <th style="width:120px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td class="text-right">
                        <a href="~/category/edit/@item.CategoryID"
                           class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>Sửa
                        </a>
                        <a href="~/category/delete/@item.CategoryID"
                           class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
 
 
     <div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a>@Model.Page</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }


    </ul>

</div>


