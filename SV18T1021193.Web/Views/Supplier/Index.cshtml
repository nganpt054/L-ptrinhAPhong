@model SV18T1021193.Web.Models.PaginationSearchInput
@{
    ViewBag.Title = "Nhà cung cấp";
}
<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form action="~/supplier/search" id="searchInput">
            <div class="input-group">
                @Html.HiddenFor(m => m.PageSize)
                <input type="text" name="searchvalue"
                       class="form-control"
                       placeholder="Nhập tên hoặc địa chỉ cần tìm"
                       autofocus value="@Model.SearchValue">
                <span class="input-group-btn">
                    <button type="submit"
                            id="search-btn"
                            class="btn btn-flat btn-info">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/supplier/create"
                       class="btn btn-flat btn-primary"
                       style="margin-left:10px">
                        <i class="fa fa-plus"></i>
                        Bổ sung
                    </a>
                </span>

            </div>
        </form>
        <div id="searchResult">

        </div>
    </div>
    <!-- /.box-body -->

</div>
@section scripts {
    <script src="~/Scripts/Search.js"></script>
    <script>
        $(document).ready(function () {
            doSearch(@Model.Page);
            $("#searchInput").submit(function (e) {
                e.preventDefault();
                doSearch(1);
                return false;
            });
        });




    </script>
}


