@model SV18T1021230.DomainModel.Supplier
@{

}

<div class="box box-primary">
    <div class="box-header with-border">
    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/supplier/save" method="post">
            <input type="hidden" name="SupplierID" value="@Model.SupplierID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="SupplierName"
                           name="SupplierName"
                           placeholder="" autofocus value="@Model.SupplierName">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên giao dịch:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="ContactName"
                           name="ContactName"
                           placeholder="" value="@Model.ContactName">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Address"
                           name="Address"
                           placeholder="" value="@Model.Address">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia:</label>
                <div class="col-sm-10">
                    <select class="form-control"
                            id="Country"
                            name="Country"
                            placeholder="" value="@Model.Country">
                        @foreach (var country in SV18T1021230.BusinessLayer.CommonDataService.ListOfCountries())
                        {
                            if (country.CountryName == Model.Country)
                            {
                                <option value="@country.CountryName" selected>@country.CountryName</option>
                            }
                            else
                            {
                                <option value="@country.CountryName">@country.CountryName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thành phố:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="City"
                           name="City"
                           placeholder="" value="@Model.City">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mã số thuế:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="PostalCode"
                           name="PostalCode"
                           placeholder="" value="@Model.PostalCode">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Phone"
                           name="Phone"
                           placeholder="" value="@Model.Phone">
                </div>
            </div>


            <div class="box-footer">
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit"
                            class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a href="~/customer" class="btn btn-default">
                        <i class="fa fa-backward"></i>Quay lại
                    </a>
                </div>

            </div>
        </form>
    </div>


</div>
